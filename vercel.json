{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "data/chunks.json"
    }
  },
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.ts" },
    { "src": "/api/categories", "dest": "/api/categories.ts" },
    { "src": "/api/health", "dest": "/api/health.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}


